<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="gps_enabled"
        android:summary="Wyłącz jeśli chcesz wprowadzić nazwę miasta"
        android:title="Lokalizacja włączona" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:inputType="numberDecimal"
        android:key="longitude_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Długość geograficzna: " />
    <EditTextPreference
        android:defaultValue="Default value"
        android:inputType="numberDecimal"
        android:key="latitude_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textSize="18sp"
        android:title="Szerokość geograficzna" />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/list_update_intervals"
        android:entryValues="@array/list_update_intervals_values"
        android:key="refreshing_time"
        android:title="Czas odświeżania" />
    <SwitchPreference
        android:defaultValue="true"
        android:key="c_or_f"
        android:summary="Przełącz by zmienić jednostkę"
        android:summaryOff="Farenheit"
        android:summaryOn="Celsius"
        android:textOff="Farenheit"
        android:textOn="Celsius"
        android:textSize="18sp"
        android:title="Jednostki" />
    <EditTextPreference
        android:inputType="text"
        android:key="cityName_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Podaj nazwę miasta."
        android:textSize="18sp"
        android:title="Miasto" />
</PreferenceScreen>