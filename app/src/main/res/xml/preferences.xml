<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="gps_enabled"
        android:summary="Wyłącz jeśli chcesz pozorować swoją lokalizację dla aplikacji"
        android:title="Odczyt GPS z urządzenia" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:inputType="numberDecimal"
        android:key="longitude_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Pozorowana długość geograficzna: " />
    <EditTextPreference
        android:defaultValue="Default value"
        android:inputType="numberDecimal"
        android:key="latitude_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Pozorowana szerokość geograficzna" />
    <ListPreference
        android:defaultValue="1"
        android:entries="@array/list_update_intervals"
        android:entryValues="@array/list_update_intervals_values"
        android:key="refreshing_time"
        android:title="Czas odświeżania" />
    <EditTextPreference
        android:defaultValue="Default value"
        android:inputType="date"
        android:key="date_value"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:summary="Wprowadź datę dla której chcesz obliczyć dane słońca i księżyca."
        android:title="Data" />
</PreferenceScreen>